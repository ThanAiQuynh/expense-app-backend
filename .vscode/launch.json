{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Backend (Dev Nodemon)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "nodemon",
      "program": "src/server.js",
      "restart": true,
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
